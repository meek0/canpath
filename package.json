{
  "name": "canpath",
  "version": "1.0.0",
  "description": "CanPath Template",
  "main": "index.js",
  "scripts": {
    "build": "npm run css",
    "css-compile": "sass --load-path node_modules --style expanded scss:static/assets/css/",
    "css-lint": "stylelint scss/",
    "css-prefix": "postcss --replace static/assets/css/custom.css --use autoprefixer --map",
    "css-purge": "purgecss --keyframes --css static/assets/css/custom.css --content index.html --output static/assets/css/",
    "css": "npm-run-all css-compile css-prefix",
    "watch": "nodemon -e html,scss -x \"npm run css\"",
    "test": "npm run css-lint && npm run css"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bootstrap": "^4.6.0",
    "bootstrap-icons": "^1.4.0",
    "jquery": "^3.6.0",
    "popper.js": "^1.16.1"
  },
  "devDependencies": {
    "autoprefixer": "^10.2.5",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.10",
    "postcss-cli": "^8.3.1",
    "purgecss": "^4.0.2",
    "sass": "^1.53.0",
    "stylelint": "^13.12.0",
    "stylelint-config-twbs-bootstrap": "^2.1.0"
  }
}
